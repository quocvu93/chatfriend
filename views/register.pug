extends layout
block body-content
    div#form-register
        div
            form(action = "/register", method = "POST")
                div.child-form
                    h4 Nhập Tên(Yêu Cầu Nhớ Khi Đăng Nhập):
                    div.display-err
                        span #{name_err}
                    input.form(type="text" name="name",id="name" size="45" onfocus="elementHasfocus()")
                div.child-form
                    h4 Nhập Mật Khẩu:
                    div.display-err
                        span #{password_err}
                    input.form(type="password" name="password",id="password" size="45" onfocus="elementHasfocus()")
                div.child-form
                    h4 Nhập Tên Hiển Thị:
                    div.display-err
                        span #{displayname_err}
                    input.form(type="text" name="displayname",id="displayname" size="45" onfocus="elementHasfocus()")
                div.child-form
                    button.btn(type = "submit") CHƠI NGAY
                    